<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_height="match_parent"
    tools:background="#000000"
    tools:context=".presentation.MainFragment">

    <TextView
        android:id="@+id/casaTamplaruluiTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:background="@null"
        android:fontFamily="@font/coolvetica_regular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:letterSpacing="0.035"
        android:lineSpacingMultiplier="0.70"
        android:maxLines="2"
        android:text="@string/casa_tamplarului"
        android:textAllCaps="true"
        android:textColor="@color/textColor"
        android:textSize="70sp"
        app:layout_constraintBottom_toTopOf="@id/scanTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/scanTv"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:includeFontPadding="false"
        android:background="@drawable/bg_button"
        android:fontFamily="@font/coolvetica_regular"
        android:gravity="center"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:letterSpacing="0.035"
        android:text="@string/start_scanning"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/casaTamplaruluiTv" />
</androidx.constraintlayout.widget.ConstraintLayout>